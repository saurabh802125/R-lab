# Load necessary libraries
matrix_A <- matrix(c(1, 2, 3, 4, 5, 6, 7, 8, 9), nrow = 3, ncol = 3, byrow = TRUE)
matrix_B <- matrix(c(9, 8, 7, 6, 5, 4, 3, 2, 1), nrow = 3, ncol=3,byrow = TRUE)

# Task 2: Matrix Manipulation
sum_matrix <- matrix_A + matrix_B                    # Element-wise sum
scaled_matrix <- matrix_A * 2                        # Scaling matrix_A by 2

# Task 3: Matrix Operations
transposed_A <- t(matrix_A)                          # Transpose of matrix_A
product_matrix <- matrix_A %*% matrix_B              # Matrix product

# Task 4: Matrix Statistics
sum_matrix_A <- sum(matrix_A)                        # Sum of all elements in matrix_A
mean_matrix_B <- mean(matrix_B)                      # Mean of all elements in matrix_B
sd_matrix_B <- sd(matrix_B)                          # Standard deviation of elements in matrix_B

# Print matrices in grid form
print("Sum of matrices (matrix_A + matrix_B):")
print(sum_matrix)

print("Scaled matrix_A by 2:")
print(scaled_matrix)

print("Transpose of matrix_A:")
print(transposed_A)

print("Matrix product (matrix_A %*% matrix_B):")
print(product_matrix)

# Print statistical measures
cat("Sum of all elements in matrix_A:", sum_matrix_A, "\n")
cat("Mean of all elements in matrix_B:", mean_matrix_B, "\n")
cat("Standard deviation of elements in matrix_B:", sd_matrix_B, "\n")
